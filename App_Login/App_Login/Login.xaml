<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Login.Login"
             Title="Login"
             BackgroundColor="Black">

    <ContentPage.Content>

        <StackLayout Margin="15" VerticalOptions="Center">

            <Frame CornerRadius="10">

                <StackLayout>

                    <Label Text="LOGIN" HorizontalTextAlignment="Center"
                           FontAttributes="Bold"
                           FontSize="30"
                           TextColor="Red"/>

                    <StackLayout Margin="0,10,0,10">
                        
                        <!-- Usuário: -->

                        <Label Text="Usuário:" HorizontalTextAlignment="Center"
                               FontAttributes="Bold"
                               FontSize="15"
                               TextColor="Black"/>
                        
                        <Entry x:Name="txt_usuario_login"
                               Placeholder="Insira seu nome de usuário"
                               PlaceholderColor="Gray"
                               HorizontalTextAlignment="Center"
                               TextColor="Black"/>

                        <!-- Senha: -->
                        
                        <Label Text="Senha:" HorizontalTextAlignment="Center"
                               FontAttributes="Bold"
                               FontSize="15"
                               TextColor="Black"/>
                        
                        <Entry x:Name="txt_senha_login"
                               Placeholder="Insira sua senha"
                               PlaceholderColor="Gray"
                               HorizontalTextAlignment="Center"
                               IsPassword="True"
                               TextColor="Black"/>

                    </StackLayout>

                    <Button Text="Confirmar" BackgroundColor="Green"
                            TextColor="#FFF"
                            FontAttributes="Bold"
                            Clicked="Button_Clicked"/>

                </StackLayout>

            </Frame>

        </StackLayout>

    </ContentPage.Content>

</ContentPage>